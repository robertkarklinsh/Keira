<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_pressure"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gattaca.team.ui.activity.tracker.AddPressureActivity">

    <TextView
        android:text="Время"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/add_pressure_time" />

    <EditText
        android:text="12:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_pressure_time"
        android:layout_alignParentStart="true"
        android:focusable="false"
        android:layout_marginTop="26dp"
        android:id="@+id/add_pressure_time_field" />

    <TextView
        android:text="Систолическое"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/add_pressure_time"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:id="@+id/add_pressure_systolic" />

    <TextView
        android:text="Диастолическое"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_pressure_systolic"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/add_pressure_dyastolic" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/add_pressure_systolic_field"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:id="@+id/add_pressure_dyastolic_field"
        android:hint="120" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/add_pressure_systolic_field"
        android:layout_above="@+id/add_pressure_dyastolic"
        android:layout_alignStart="@+id/add_pressure_dyastolic_field"
        android:hint="120" />

    <Button
        android:text="Отмена"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:id="@+id/add_pressure_cancel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/fucking_alarm"
        android:layout_alignTop="@+id/add_pressure_time"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:id="@+id/add_pressure_state" />

    <Button
        android:text="ОК"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_pressure_ok"
        android:layout_alignBaseline="@+id/add_pressure_cancel"
        android:layout_alignBottom="@+id/add_pressure_cancel"
        android:layout_alignEnd="@+id/add_pressure_state" />

    <CheckBox
        android:text="Напоминать каждый день"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_pressure_time_field"
        android:layout_alignParentStart="true"
        android:visibility="gone"
        android:id="@+id/add_pressure_every_day_reminder" />

    <TextView
        android:text="Пульс"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_pressure_dyastolic_field"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/add_pressure_pulse" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/add_pressure_dyastolic_field"
        android:layout_alignEnd="@+id/add_pressure_dyastolic_field"
        android:id="@+id/add_pressure_pulse_field"
        android:hint="90" />


</RelativeLayout>
